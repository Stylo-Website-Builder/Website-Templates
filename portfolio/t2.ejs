<!DOCTYPE html>
<html lang="en" style="scroll-behavior: smooth;">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= websiteName %></title>
    <link rel="icon" type="image/png" href="https://res.cloudinary.com/dn5occ53n/image/upload/v1738491116/transparent-favicon_dsgzwb.png">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-sans bg-gray-900 text-gray-100">
    <!-- Header - Fixed Navigation -->
    <header class="fixed w-full bg-gray-900/80 backdrop-blur-md z-30 py-4 px-8">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <h1 class="text-xl font-light"><%= header.logoText %></h1>
            <nav class="hidden md:block">
                <ul class="flex gap-8">
                    <% header.items.forEach(item => { %>
                    <li>
                        <a href="<%= item.href %>" class="hover:text-emerald-400 transition-colors">
                            <%= item.text %>
                        </a>
                    </li>
                    <% }) %>
                </ul>
            </nav>
            <div class="text-emerald-400"><%= header.phone %></div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center px-8 pt-20">
        <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">
            <div class="text-left space-y-6">
                <h1 class="text-6xl font-bold bg-gradient-to-r from-emerald-400 to-blue-500 bg-clip-text text-transparent">
                    <%= hero.greeting %>
                </h1>
                <p class="text-xl text-gray-400"><%= hero.subtitle %></p>
                <a href="#about" class="inline-block bg-emerald-400 px-8 py-3 rounded-full text-gray-900 font-medium hover:bg-emerald-300 transition-colors">
                    <%= hero.cta %>
                </a>
            </div>
            <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-r from-emerald-400/20 to-blue-500/20 rounded-full blur-3xl"></div>
                <div class="relative rounded-full overflow-hidden w-64 h-64 mx-auto">
                    <img src="<%= hero.profileImage %>" alt="Profile" class="w-full h-full object-cover">
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-32 px-8 bg-gray-800">
        <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">
            <div class="relative">
                <div class="absolute inset-0 bg-emerald-400/10 blur-2xl"></div>
                <img src="<%= about.image %>" alt="About" class="relative rounded-2xl w-full h-[400px] object-cover">
            </div>
            <div class="space-y-6">
                <h2 class="text-4xl font-bold"><%= about.title %></h2>
                <p class="text-gray-400"><%= about.description %></p>
                <div class="space-y-4">
                    <% Object.entries(about.details).forEach(([key, value]) => { %>
                    <div class="flex gap-4 items-center">
                        <span class="text-emerald-400 font-medium"><%= key.charAt(0).toUpperCase() + key.slice(1) %></span>
                        <%= value %>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-32 px-8">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-4xl font-bold text-center mb-16"><%= services.title %></h2>
            <div class="grid md:grid-cols-4 gap-8">
                <% services.items.forEach(service => { %>
                <div class="bg-gray-800 p-8 rounded-2xl hover:bg-gray-800/80 transition-colors">
                    <h3 class="text-2xl font-bold mb-4"><%= service.name %></h3>
                    <p class="text-gray-400 mb-4"><%= service.description %></p>
                    <span class="text-emerald-400 font-bold"><%= service.price %></span>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-32 px-8 bg-gray-800">
        <div class="max-w-6xl mx-auto">
            <h2 class="text-4xl font-bold text-center mb-16"><%= projects.title %></h2>
            <div class="grid md:grid-cols-3 gap-8">
                <% projects.items.forEach(project => { %>
                <div class="group relative overflow-hidden rounded-2xl">
                    <img src="<%= project.image %>" alt="<%= project.name %>" 
                         class="w-full h-[300px] object-cover transition-transform duration-300 group-hover:scale-110">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity">
                        <div class="absolute bottom-0 left-0 right-0 p-6">
                            <h3 class="text-xl font-bold"><%= project.name %></h3>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-32 px-8">
        <div class="max-w-2xl mx-auto">
            <h2 class="text-4xl font-bold text-center mb-16"><%= contact.title %></h2>
            <form class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                    <input type="text" placeholder="Name" 
                           class="w-full px-6 py-4 bg-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-400">
                    <input type="email" placeholder="Email" 
                           class="w-full px-6 py-4 bg-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-400">
                </div>
                <textarea placeholder="Tell me about the project" 
                          class="w-full px-6 py-4 bg-gray-800 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-400" 
                          rows="4"></textarea>
                <button class="w-full bg-emerald-400 text-gray-900 font-medium px-6 py-4 rounded-lg hover:bg-emerald-300 transition-colors">
                    Send Message
                </button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 py-8 px-8 text-center">
        <p class="text-gray-400"><%= footer.copyright %></p>
    </footer>
</body>
</html>